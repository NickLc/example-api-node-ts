{
  "name": "app-api",
  "version": "1.0.0",
  "description": "API-REST",
  "main": "server.js",
  "scripts": {
    "postinstall": "git config core.hooksPath ./.git-hooks",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/server.ts",
    "build": "tsc --build",
    "prod": "npm run build && forever start dist/src/server.js",
    "start": "npm run build && node dist/src/server.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" --ignore-path .prettierignore",
    "lint": "ts-standard --ext .js,.ts \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\" --fix",
    "test": "node_modules/.bin/jest --runInBand --verbose",
    "test-coverage": "node_modules/.bin/jest --watchAll --runInBand --verbose --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "express": "^4.18.2",
    "express-validator": "6.14.0",
    "helmet": "4.6.0",
    "http-status-codes": "2.2.0",
    "jsonwebtoken": "^9.0.0",
    "memory-cache": "0.2.0",
    "node-fetch": "^3.3.0",
    "reflect-metadata": "0.1.13",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "8.5.4",
    "@types/memory-cache": "^0.2.1",
    "@types/node": "^16.4.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.9.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^28.1.3",
    "mocha": "^9.2.0",
    "prettier": "^2.3.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node-dev": "^1.1.8",
    "ts-standard": "^12.0.1",
    "typescript": "^4.3.5"
  },
  "ts-standard": {
    "project": "tsconfig.json",
    "ignore": [
      "dist",
      "node_modules"
    ]
  }
}
